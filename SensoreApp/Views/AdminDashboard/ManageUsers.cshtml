@model IEnumerable<SensoreApp.Models.User>

<!--Header-->
<div class="container mt-4">
    <h2>Manage User Accounts</h2>
    <hr />
    <!-- To group account by user types -->
    <form method="get" asp-action="ManageUsers" class="mb-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Filter by User Group</label>
                <select name="role" class="form-select">
                    <option value="">All Users</option>
                    <option value="Patient" selected="@(ViewBag.SelectedRole?.ToString() == "Patient")">
                        Patients
                    </option>
                    <option value="Clinician" selected="@(ViewBag.SelectedRole?.ToString() == "Clinician")">
                        Clinicians
                    </option>
                    <option value="Admin" selected="@(ViewBag.SelectedRole?.ToString() == "Admin")">
                        Admins
                    </option>
                </select>
            </div>

            <div class="col-md-2">
                <button class="btn btn-primary w-100">Apply</button>
            </div>
        </div>
    </form>



   
    <!--Table Columns-->
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Status</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            <!--Table values formatted-->
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Role</td>
                    <td>@(user.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <!-- To edit user details -->
                        <div class="d-flex gap-1">
                            <a asp-action="EditUsers" asp-route-id="@user.UserId" class="btn btn-sm btn-warning"> Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <!-- Gives admin the choice to deactive user if active (only when active)-->
                        @if (user.IsActive)
                        {
                            <form asp-action="DeactivateUser" method="post">
                                <input type="hidden" name="id" value="@user.UserId" />
                                <button class="btn btn-sm btn-danger">
                                    Deactivate
                                </button>
                            </form>
                        }
                </tr>
            }
        </tbody>
    </table>
</div>
