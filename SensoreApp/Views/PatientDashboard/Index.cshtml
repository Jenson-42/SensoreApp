@model SensoreApp.Models.PatientDashboardViewModel

@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Welcome Back, @Model.PatientName</h2>
            <p class="text-muted">Last Upload: @Model.LastUploadTime.ToString("dd/MM/yyyy HH:mm:ss")</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="d-flex align-items-center justify-content-end">
                <img src="https://via.placeholder.com/50" alt="Profile" class="rounded-circle" />
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Heatmap and Metrics -->
        <div class="col-lg-7">
            <!-- Live Heatmap Preview -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Live Heatmap (32 X 32 grid)</h5>
                </div>
                <div class="card-body text-center">
                    <div id="heatmapPreview" style="width: 100%; height: 400px; position: relative; background: #1a1a1a; border-radius: 8px;">
                        <!-- Heatmap Grid Container -->
                        <div class="heatmap-grid" id="heatmapGrid"></div>

                        <!-- Legend -->
                        <div style="position: absolute; bottom: 10px; right: 10px; background: rgba(255,255,255,0.9); padding: 10px; border-radius: 5px;">
                            <div style="font-size: 11px; font-weight: bold; margin-bottom: 5px;">Pressure Scale</div>
                            <div style="display: flex; align-items: center; gap: 5px;">
                                <div style="width: 20px; height: 15px; background: #2E7D32;"></div>
                                <span style="font-size: 10px;">Low</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 5px; margin-top: 3px;">
                                <div style="width: 20px; height: 15px; background: #FFA726;"></div>
                                <span style="font-size: 10px;">Medium</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 5px; margin-top: 3px;">
                                <div style="width: 20px; height: 15px; background: #D32F2F;"></div>
                                <span style="font-size: 10px;">High</span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "FrameMetrics", new { frameId = Model.CurrentFrameID })" class="btn btn-info">
                            View Full Heatmap
                        </a>
                    </div>
                </div>
            </div>

            <!-- Metrics Row -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card shadow-sm h-100" style="background-color: #e3f2fd; border-left: 4px solid #2196F3;">
                        <div class="card-body">
                            <h6 class="text-muted mb-2">Peak Pressure Index</h6>
                            @if (Model.PeakPressureIndex.HasValue)
                            {
                                <h2 class="mb-0" style="color: #1976D2;">@Model.PeakPressureIndex.Value.ToString("F2")</h2>
                                <small class="text-muted">PSI</small>
                            }
                            else
                            {
                                <p class="text-muted">No data</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm h-100" style="background-color: #e8f5e9; border-left: 4px solid #4CAF50;">
                        <div class="card-body">
                            <h6 class="text-muted mb-2">Contact Area %</h6>
                            @if (Model.ContactAreaPercent.HasValue)
                            {
                                <h2 class="mb-0" style="color: #388E3C;">@Model.ContactAreaPercent.Value.ToString("F2")%</h2>
                            }
                            else
                            {
                                <p class="text-muted">No data</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Metrics Row -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card shadow-sm h-100" style="background-color: #e0f7fa; border-left: 4px solid #00BCD4;">
                        <div class="card-body">
                            <h6 class="text-muted mb-2">COV (Pressure Variation)</h6>
                            @if (Model.COV.HasValue)
                            {
                                <h2 class="mb-0" style="color: #0097A7;">@Model.COV.Value.ToString("F4")</h2>
                            }
                            else
                            {
                                <p class="text-muted">No data</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm h-100" style="background-color: #fff3e0; border-left: 4px solid #FF9800;">
                        <div class="card-body">
                            <h6 class="text-muted mb-2">
                                Threshold
                                @if (Model.AlertThresholdPercent != 80)
                                {
                                    <span class="badge bg-primary ms-1">Custom</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary ms-1">Default</span>
                                }
                            </h6>
                            <h2 class="mb-0" style="color: #F57C00;">@Model.AlertThresholdPercent%</h2>
                            <small class="text-muted">Alert Level</small>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Right Column: Alerts and Comments -->
        <div class="col-lg-5">
            <!-- Recent Alerts -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Recent Alerts</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentAlerts != null && Model.RecentAlerts.Any())
                    {
                        @foreach (var alert in Model.RecentAlerts)
                        {
                            <div class="alert @(alert.Status.Contains("Normal") ? "alert-success" : "alert-danger") mb-3" role="alert">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="d-flex align-items-start">
                                        <div class="me-2">
                                            @if (alert.Status.Contains("Normal"))
                                            {
                                                <i class="bi bi-check-circle-fill fs-4"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                                            }
                                        </div>
                                        <div>
                                            <strong>@alert.Status</strong>
                                            <div class="small text-muted">@alert.Timestamp.ToString("HH:mm")</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Expanded details -->
                                <div class="mt-2 ps-4">
                                    @* Reason line *@
                                    @if (!string.IsNullOrWhiteSpace(alert.Reason))
                                    {
                                        <div class="small">
                                            <span class="me-2">ℹ️</span>
                                            <strong>Reason:</strong>
                                            <span class="ms-1">@alert.Reason</span>
                                        </div>
                                    }

                                    @* Trigger Value line *@
                                    <div class="small mt-1">
                                        <span class="me-2">🔧</span>
                                        <strong>Trigger Value:</strong>
                                        <span class="ms-1">
                                            @(alert.TriggerValue.HasValue? alert.TriggerValue.Value.ToString("F2") : "N/A")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No recent alerts</p>
                    }

                </div>
            </div>

            <!-- Alert Threshold Slider -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Alert Threshold</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateThreshold" asp-controller="PatientDashboard" method="post">
                        <div class="mb-3">
                            <label for="thresholdSlider" class="form-label">
                                Pressure Alert Level: <span id="thresholdValue">@Model.AlertThresholdPercent</span>%
                            </label>
                            <input type="range" class="form-range" id="thresholdSlider" name="thresholdValue"
                                   min="1" max="100" value="@Model.AlertThresholdPercent"
                                   oninput="updateThresholdDisplay(this.value)">
                            <input type="hidden" name="userId" value="1" />
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">1%</small>
                                <small class="text-muted">100%</small>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-save"></i> Save Threshold
                        </button>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>

            <!-- Comment Box -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Comment Box</h5>
                </div>
                <div class="card-body">
                    <!-- Display existing comments -->
                    <div class="comments-list mb-3" style="max-height: 300px; overflow-y: auto;">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            @foreach (var comment in Model.Comments)
                            {
                                <div class="comment-item mb-3 p-2 rounded @(comment.AuthorType == "Patient" ? "bg-light" : "bg-primary bg-opacity-10")">
                                    <div class="d-flex justify-content-between mb-1">
                                        <strong class="@(comment.AuthorType == "Patient" ? "text-primary" : "text-success")">
                                            @comment.AuthorType:
                                        </strong>
                                        <small class="text-muted">@comment.CreatedAt.ToString("dd/MM HH:mm")</small>
                                    </div>
                                    <p class="mb-0 small">@comment.Text</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted small">No comments yet. Start a conversation!</p>
                        }
                    </div>

                    <!-- Add new comment form -->
                    <form asp-action="AddComment" asp-controller="PatientDashboard" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" name="commentText"
                                   placeholder="Type your comment..." required />
                            <input type="hidden" name="frameId" value="@Model.CurrentFrameID" />
                            <input type="hidden" name="userId" value="1" />
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message Display -->
    @if (TempData["Message"] != null)
    {
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div class="toast show" role="alert">
                <div class="toast-header bg-success text-white">
                    <strong class="me-auto">Success</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["Message"]
                </div>
            </div>
        </div>
    }
    <!-- Error Message Display -->
    @if (TempData["Error"] != null)
    {
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div class="toast show" role="alert">
                <div class="toast-header bg-danger text-white">
                    <strong class="me-auto">Error</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["Error"]
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        function updateThresholdDisplay(value) {
            document.getElementById('thresholdValue').textContent = value;
        }

        // Auto-hide toast after 3 seconds
        setTimeout(function() {
            var toasts = document.querySelectorAll('.toast');
            toasts.forEach(function(toast) {
                var bsToast = new bootstrap.Toast(toast);
                bsToast.hide();
            });
        }, 3000);
           
        // Generate realistic heatmap on page load
        document.addEventListener('DOMContentLoaded', function() {
            generateRealisticHeatmap();

            // Animate heatmap every 3 seconds to simulate live data
            setInterval(updateHeatmap, 3000);
        });

        function generateRealisticHeatmap() {
            const grid = document.getElementById('heatmapGrid');
            if (!grid) return;

            grid.innerHTML = ''; // Clear existing cells

            // Create 32x32 grid
            for (let row = 0; row < 32; row++) {
                for (let col = 0; col < 32; col++) {
                    const cell = document.createElement('div');
                    cell.className = 'heatmap-cell';

                    // Generate realistic sitting pressure pattern
                    const pressure = calculatePressure(row, col);
                    cell.classList.add(getPressureClass(pressure));
                    cell.setAttribute('data-row', row);
                    cell.setAttribute('data-col', col);
                    cell.setAttribute('data-pressure', pressure);

                    // Tooltip on hover
                    cell.title = `Position: (${row}, ${col})\nPressure: ${pressure.toFixed(0)} PSI`;

                    grid.appendChild(cell);
                }
            }
        }

        function calculatePressure(row, col) {
            // Simulate realistic sitting pattern (high pressure in buttocks area)
            const centerRow = 20;
            const centerCol = 16;

            // Calculate distance from pressure center
            const distanceFromCenter = Math.sqrt(
                Math.pow(row - centerRow, 2) +
                Math.pow(col - centerCol, 2)
            );

            // High pressure region (buttocks)
            if (row >= 16 && row <= 24 && col >= 12 && col <= 20) {
                const localDist = Math.sqrt(
                    Math.pow(row - 20, 2) +
                    Math.pow(col - 16, 2)
                );
                return Math.max(0, 500 - localDist * 40 + Math.random() * 50);
            }
            // Medium pressure (thighs)
            else if (row >= 10 && row <= 28 && col >= 8 && col <= 24) {
                return 100 + Math.random() * 150;
            }
            // Low/no pressure elsewhere
            else {
                return Math.random() * 30;
            }
        }

        function getPressureClass(pressure) {
            if (pressure < 30) return 'pressure-none';
            if (pressure < 200) return 'pressure-low';
            if (pressure < 400) return 'pressure-medium';
            if (pressure < 550) return 'pressure-high';
            return 'pressure-critical';
        }

        function updateHeatmap() {
            // Slightly animate existing cells to simulate live data
            const cells = document.querySelectorAll('.heatmap-cell');
            cells.forEach(cell => {
                const currentPressure = parseFloat(cell.getAttribute('data-pressure'));
                const variation = (Math.random() - 0.5) * 30; // Random variation
                const newPressure = Math.max(0, currentPressure + variation);

                cell.setAttribute('data-pressure', newPressure);
                cell.className = 'heatmap-cell ' + getPressureClass(newPressure);
                cell.title = `Position: (${cell.dataset.row}, ${cell.dataset.col})\nPressure: ${newPressure.toFixed(0)} PSI`;
            });
        }
    </script>
}
@section Styles {
    <style>
        .heatmap-grid {
            display: grid;
            grid-template-columns: repeat(32, 1fr);
            grid-template-rows: repeat(32, 1fr);
            width: 100%;
            height: 100%;
            gap: 1px;
            padding: 10px;
        }

        .heatmap-cell {
            width: 100%;
            height: 100%;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border-radius: 2px;
        }

            .heatmap-cell:hover {
                transform: scale(1.5);
                box-shadow: 0 0 10px rgba(255,255,255,0.5);
                z-index: 10;
                cursor: pointer;
            }

        /* Pressure color classes */
        .pressure-none {
            background: #1a1a1a;
        }

        .pressure-low {
            background: #2E7D32;
        }

        .pressure-medium {
            background: #FFA726;
        }

        .pressure-high {
            background: #D32F2F;
        }

        .pressure-critical {
            background: #B71C1C;
        }
    </style>
}
