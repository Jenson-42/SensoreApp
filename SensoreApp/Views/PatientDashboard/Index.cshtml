@model SensoreApp.Models.PatientDashboardViewModel

@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Welcome Back, @Model.PatientName</h2>
            <p class="text-muted">Last Upload: @Model.LastUploadTime.ToString("dd/MM/yyyy HH:mm:ss")</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="d-flex align-items-center justify-content-end">
                <img src="https://via.placeholder.com/50" alt="Profile" class="rounded-circle" />
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Left Column: Heatmap and Metrics -->
        <div class="col-lg-7">
            <!-- Live Heatmap Preview -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Live Heatmap (32 X 32 grid)</h5>
                </div>
                <div class="card-body text-center">
                    <div id="heatmapPreview" style="width: 100%; height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-direction: column;">
                        <p class="text-white fs-5 mb-2">Live Heatmap Preview</p>
                        <p class="text-white-50 small">(32x32 pressure map will display here)</p>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "FrameMetrics", new { frameId = Model.CurrentFrameID })" class="btn btn-info">
                            View Full Heatmap
                        </a>
                    </div>
                </div>
            </div>
