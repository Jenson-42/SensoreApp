@{
    ViewData["Title"] = "Report Builder";
    var userType = ViewBag.UserType as string ?? "patient";
    var currentUserId = ViewBag.CurrentUserId as int? ?? 1;
    var currentUserName = ViewBag.CurrentUserName as string ?? "User";
    var patientList = ViewBag.PatientList as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h2>
                <i class="bi bi-file-earmark-bar-graph"></i> Report Builder
            </h2>
            <p class="text-muted">Generate and download patient pressure analysis reports</p>

            <!-- NEW: Show current user info -->
            <div class="alert alert-info mt-3">
                <i class="bi bi-person-circle"></i>
                <strong>Logged in as:</strong> @currentUserName
                <span class="badge @(userType == "clinician" ? "bg-primary" : "bg-success")">
                    @(userType == "clinician" ? "Clinician" : "Patient")
                </span>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-gear-fill"></i> Configure Report
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form id="reportForm" asp-action="GeneratePreview" asp-controller="Reports" method="post">
                        <input type="hidden" name="CurrentUserId" value="@currentUserId" />

                        <!-- Patient Selection -->
                        @if (userType == "clinician" && patientList != null && patientList.Any())
                        {
                            <!-- CLINICIAN VIEW: Shows dropdown to select patient -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-person"></i> Select Patient
                                </label>
                                <select class="form-select form-select-lg" name="SelectedPatientId" id="patientSelect" required>
                                    <option value="">-- Choose Patient --</option>
                                    @foreach (var patient in patientList)
                                    {
                                        <option value="@patient.Value">@patient.Text</option>
                                    }
                                </select>
                                <small class="text-muted">Select which patient's data you want to include in the report</small>
                            </div>
                        }
                        else
                        {
                            <!-- PATIENT VIEW: Automatically set to current user -->
                            <input type="hidden" name="SelectedPatientId" value="@currentUserId" />
                            <div class="alert alert-success mb-4">
                                <i class="bi bi-info-circle"></i>
                                This report will be generated for your own data.
                            </div>
                        }

                        <!-- Date Range Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-calendar-range"></i> Select Date Range
                            </label>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="dateFrom" class="form-label">From:</label>
                                    <input type="date" class="form-control form-control-lg" id="dateFrom" name="DateFrom"
                                           value="@ViewBag.DateFrom?.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="dateTo" class="form-label">To:</label>
                                    <input type="date" class="form-control form-control-lg" id="dateTo" name="DateTo"
                                           value="@ViewBag.DateTo?.ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <button type="button" class="btn btn-info" onclick="refreshSnapshots()">
                                    <i class="bi bi-arrow-clockwise"></i> Refresh Snapshots
                                </button>
                                <small class="d-block text-muted mt-2">
                                    <i class="bi bi-info-circle"></i> Click to update available snapshots after changing dates
                                </small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Comparison Date Range (Optional) -->
                        <div class="mb-4">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="enableComparison" onchange="toggleComparison()">
                                <label class="form-check-label fw-bold" for="enableComparison">
                                    <i class="bi bi-arrow-left-right"></i> Enable Comparison Period
                                </label>
                            </div>
                            <div id="comparisonDateSection" style="display: none;">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> Compare this period against a previous time range
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="comparisonDateFrom" class="form-label">Compare From:</label>
                                        <input type="date" class="form-control form-control-lg" id="comparisonDateFrom" name="ComparisonDateFrom" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="comparisonDateTo" class="form-label">Compare To:</label>
                                        <input type="date" class="form-control form-control-lg" id="comparisonDateTo" name="ComparisonDateTo" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Metrics Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-graph-up"></i> Select Metrics to Include
                            </label>
                            <div class="border rounded p-3" style="background-color: #f8f9fa;">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="metricPeakPressure" name="IncludePeakPressure" value="true" checked>
                                    <label class="form-check-label" for="metricPeakPressure">
                                        <strong>Peak Pressure</strong>
                                        <small class="text-muted d-block">Highest recorded pressure in the analysis period</small>
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="metricContactArea" name="IncludeContactArea" value="true" checked>
                                    <label class="form-check-label" for="metricContactArea">
                                        <strong>Contact Area %</strong>
                                        <small class="text-muted d-block">Percentage of sensor mat in contact</small>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="metricCOV" name="IncludeCOV" value="true" checked>
                                    <label class="form-check-label" for="metricCOV">
                                        <strong>Coefficient of Variation (COV)</strong>
                                        <small class="text-muted d-block">Measure of pressure distribution variability</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Snapshot Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-images"></i> Snapshot Selection
                            </label>
                            <p class="text-muted small mb-2">
                                Select specific time snapshots to include in the report
                                @if (ViewBag.TotalFramesInRange != null && ViewBag.TotalFramesInRange > 6)
                                {
                                    <br>
                                
                                    <span class="badge bg-info mt-1">Showing 6 representative frames (sampled from @ViewBag.TotalFramesInRange total)</span>
                                }
                            </p>

                            @if (ViewBag.AvailableFrames != null && ((IEnumerable<dynamic>)ViewBag.AvailableFrames).Any())
                            {
                                <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto; background-color: #f8f9fa;">
                                    @foreach (var frame in (IEnumerable<dynamic>)ViewBag.AvailableFrames)
                                    {
                                        <div class="form-check mb-3 p-2 bg-white rounded">
                                            <input class="form-check-input" type="checkbox"
                                                   id="snapshot@(frame.FrameID)"
                                                   name="SelectedFrameIds"
                                                   value="@frame.FrameID"
                                                   checked>
                                            <label class="form-check-label d-flex align-items-center" for="snapshot@(frame.FrameID)">
                                                <canvas class="snapshot-canvas me-3" width="60" height="60" style="border-radius: 4px;"></canvas>
                                                <div>
                                                    <strong>@frame.ComputedAt.ToString("HH:mm:ss")</strong><br>
                                                    <small class="text-muted">@frame.ComputedAt.ToString("dd/MM/yyyy")</small><br>
                                                    <small class="text-muted">Frame ID: @frame.FrameID</small>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> No frames found for the selected date range.
                                    <br><small>Try adjusting the date range or upload CSV data first.</small>
                                </div>
                            }
                        </div>

                        <hr class="my-4">

                        <!-- Additional Options -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-toggles"></i> Additional Options
                            </label>
                            <div class="border rounded p-3" style="background-color: #f8f9fa;">
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="includeNotes" name="IncludeClinicianNotes" value="true" checked>
                                    <label class="form-check-label" for="includeNotes">
                                        <strong>Include Clinician Notes</strong>
                                        <small class="text-muted d-block">Add clinical observations and recommendations</small>
                                    </label>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="includeAlerts" name="IncludeAlertSummary" value="true" checked>
                                    <label class="form-check-label" for="includeAlerts">
                                        <strong>Include Alert Summary</strong>
                                        <small class="text-muted d-block">Show pressure alert statistics and history</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Generate Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg py-3">
                                <i class="bi bi-file-earmark-pdf"></i> Generate PDF Report
                            </button>
                            <a href="@Url.Action("Index", "PatientDashboard")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>

                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle comparison date section
        function toggleComparison() {
            const checkbox = document.getElementById('enableComparison');
            const section = document.getElementById('comparisonDateSection');
            section.style.display = checkbox.checked ? 'block' : 'none';

            // Clear comparison dates if unchecked
            if (!checkbox.checked) {
                document.getElementById('comparisonDateFrom').value = '';
                document.getElementById('comparisonDateTo').value = '';
            }
        }

        // Refresh snapshots based on date range
        function refreshSnapshots() {
            const dateFrom = document.getElementById('dateFrom').value;
            const dateTo = document.getElementById('dateTo').value;
            const userType = '@ViewBag.UserType';

            if (!dateFrom || !dateTo) {
                alert('Please select both From and To dates');
                return;
            }

            // Reload page with date parameters
            window.location.href = `/Reports?userType=${userType}&dateFrom=${dateFrom}&dateTo=${dateTo}`;
        }
                document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.snapshot-canvas').forEach(canvas => {
                const ctx = canvas.getContext('2d');
                const gridSize = 32;
                const cellSize = canvas.width / gridSize;

                for (let row = 0; row < gridSize; row++) {
                    for (let col = 0; col < gridSize; col++) {
                        const pressure = Math.random() * 500;
                        ctx.fillStyle = pressure > 400 ? '#D32F2F' :
                                        pressure > 200 ? '#FFA726' :
                                        '#2E7D32';
                        ctx.fillRect(col * cellSize, row * cellSize, cellSize - 0.5, cellSize - 0.5);
                    }
                }
            });
        });
    </script>
}