@model SensoreApp.Models.SensorDevices

@{
    ViewData["Title"] = "Device Details";
}

<div class="container mt-4">
    <h2>Device Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Device ID</dt>
        <dd class="col-sm-9">@Model.SensorDeviceID</dd>

        <dt class="col-sm-3">Serial Number</dt>
        <dd class="col-sm-9">@Model.SerialNumber</dd>

        <dt class="col-sm-3">Model</dt>
        <dd class="col-sm-9">@Model.Model</dd>

        <dt class="col-sm-3">Registered At</dt>
        <dd class="col-sm-9">@Model.RegisteredAt</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @(Model.IsActive ? "Active" : "Inactive")
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.SensorDeviceID" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Edit
    </a>

    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
