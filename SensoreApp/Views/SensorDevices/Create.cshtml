@model SensoreApp.Models.SensorDevices

@{
    ViewData["Title"] = "Register Sensor Device";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Register New Sensor Device</h4>
        </div>

        <div class="card-body">

            <!-- Form posting to SensorDevices/Create -->
            <form asp-action="Create" method="post">

                @Html.AntiForgeryToken()

                <!-- Device Name -->
                <div class="mb-3">
                    <label class="form-label">Device Name</label>
                    <input asp-for="Model" class="form-control" placeholder="Enter device name" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <!-- Serial Number -->
                <div class="mb-3">
                    <label class="form-label">Serial Number</label>
                    <input asp-for="SerialNumber" class="form-control" placeholder="Enter serial number" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>

                <!-- Is Active -->
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label class="form-check-label">Device Active?</label>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Save Device
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>

</div>

