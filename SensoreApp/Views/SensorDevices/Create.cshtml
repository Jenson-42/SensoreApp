@model SensoreApp.Models.SensorDevices

@{
    ViewData["Title"] = "Add New Device";
}

<div class="container mt-4">
    <h2>Add New Sensor Device</h2>
    <hr />

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="SerialNumber" class="form-label"></label>
            <input asp-for="SerialNumber" class="form-control" />
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IsActive" class="form-label"></label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Save Device
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
