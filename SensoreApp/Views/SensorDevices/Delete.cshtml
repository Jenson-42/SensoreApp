@model SensoreApp.Models.SensorDevices

@{
    ViewData["Title"] = "Delete Device";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Sensor Device</h4>
        </div>

        <div class="card-body">

            <p class="text-danger fw-bold">Are you sure you want to delete this device?</p>

            <dl class="row">
                <dt class="col-sm-4">Device Name</dt>
                <dd class="col-sm-8">@Model.Model</dd>

                <dt class="col-sm-4">Serial Number</dt>
                <dd class="col-sm-8">@Model.SerialNumber</dd>
            </dl>

            <form asp-action="Delete">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="SensorDeviceID" />

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>

</div>

