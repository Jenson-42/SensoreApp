@model SensoreApp.Models.FrameMetric

@{
    ViewData["Title"] = "Frame Metrics";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Full Heatmap View</h2>
        </div>
    </div>

    <!-- Frame Information Bar -->
@if (Model != null)
{
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-light border d-flex justify-content-between align-items-center" style="background-color: #f8f9fa;">
                    <div>
                        <span class="me-4"><strong>Frame ID:</strong> @Model.FrameID</span>
                        <span class="me-4"><strong>Sensor Device ID:</strong> <span class="text-muted">N/A</span></span>
                        <span class="me-4"><strong>Timestamp:</strong> @Model.ComputedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-primary" onclick="exportToPDF()">
                            <i class="bi bi-download"></i> Export Snapshot (PDF)
                        </button>
                    </div>
                </div>
            </div>
        </div>
}
else
{
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-light border">
                    <span class="text-muted">No frame data available</span>
                </div>
            </div>
        </div>
}
    <div class="row">
        <!-- Left Side: Heatmap -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">32×32 Heatmap - Interactive View</h5>
                </div>
                <div class="card-body text-center">
                    <!-- Placeholder for heatmap -->
                    <div id="heatmapContainer" style="width: 100%; height: 500px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-direction: column;">
                        <p class="text-white fs-5 mb-2">32x32 Heatmap Will Display Here</p>
                        <p class="text-white-50 small">(Requires SensorFrames data from teammate)</p>
                    </div>

                    <div class="mt-3">
                        <button class="btn btn-secondary" onclick="toggleCompare()">
                            <i class="bi bi-arrow-left-right"></i> Compare
                        </button>
                        <button class="btn btn-secondary" onclick="downloadCSV()">
                            <i class="bi bi-file-earmark-spreadsheet"></i> Download CSV file
                        </button>
                    </div>
                </div>
            </div>
        </div>
