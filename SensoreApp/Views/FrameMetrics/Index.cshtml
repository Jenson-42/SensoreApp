@model SensoreApp.Models.FrameMetric

@{
    ViewData["Title"] = "Frame Metrics";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Full Heatmap View</h2>
        </div>
    </div>

    <!-- Frame Information Bar -->
    @if (Model != null)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-light border d-flex justify-content-between align-items-center" style="background-color: #f8f9fa;">
                    <div>
                        <span class="me-4"><strong>Frame ID:</strong> @Model.FrameID</span>
                        <span class="me-4"><strong>Sensor Device ID:</strong> <span class="text-muted">N/A</span></span>
                        <span class="me-4"><strong>Timestamp:</strong> @Model.ComputedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-light border">
                    <span class="text-muted">No frame data available</span>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <!-- Left Side: Heatmap -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">32×32 Heatmap - Interactive View</h5>
                </div>
                <div class="card-body text-center">
                    <div id="heatmapPreview" style="width: 100%; height: 400px; position: relative; background: #1a1a1a; border-radius: 8px;">
                        <!-- Heatmap Grid Container -->
                        <div class="heatmap-grid" id="heatmapGrid"></div>

                        <!-- Legend -->
                        <div style="position: absolute; bottom: 10px; right: 10px; background: rgba(255,255,255,0.9); padding: 10px; border-radius: 5px;">
                            <div style="font-size: 11px; font-weight: bold; margin-bottom: 5px;">Pressure Scale</div>
                            <div style="display: flex; align-items: center; gap: 5px;">
                                <div style="width: 20px; height: 15px; background: #2E7D32;"></div>
                                <span style="font-size: 10px;">Low</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 5px; margin-top: 3px;">
                                <div style="width: 20px; height: 15px; background: #FFA726;"></div>
                                <span style="font-size: 10px;">Medium</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 5px; margin-top: 3px;">
                                <div style="width: 20px; height: 15px; background: #D32F2F;"></div>
                                <span style="font-size: 10px;">High</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side: Key Metrics -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Key Metrics</h5>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <div class="metric-item mb-3 p-3 rounded" style="background-color: #e3f2fd; border-left: 4px solid #2196F3;">
                            <h6 class="text-muted mb-1">Peak Pressure (Instant)</h6>
                            <h3 class="mb-0" style="color: #1976D2;">@Model.PeakPressureIndex.ToString("F2")</h3>
                            <small class="text-muted">PSI</small>
                        </div>

                        <div class="metric-item mb-3 p-3 rounded" style="background-color: #e8f5e9; border-left: 4px solid #4CAF50;">
                            <h6 class="text-muted mb-1">Contact Area %</h6>
                            <h3 class="mb-0" style="color: #388E3C;">@Model.ContactAreaPercent.ToString("F2")%</h3>
                        </div>

                        <div class="metric-item mb-3 p-3 rounded" style="background-color: #e0f7fa; border-left: 4px solid #00BCD4;">
                            <h6 class="text-muted mb-1">Coefficient of Variation (COV)</h6>
                            <h3 class="mb-0" style="color: #0097A7;">@Model.COV.ToString("F4")</h3>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> No metrics available for this frame.
                        </div>
                        <p class="text-muted small">Metrics will appear once frame data is processed.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>
        .heatmap-grid {
            display: grid;
            grid-template-columns: repeat(32, 1fr);
            grid-template-rows: repeat(32, 1fr);
            width: 100%;
            height: 100%;
            gap: 1px;
            padding: 10px;
        }

        .heatmap-cell {
            width: 100%;
            height: 100%;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border-radius: 2px;
        }

            .heatmap-cell:hover {
                transform: scale(1.5);
                box-shadow: 0 0 10px rgba(255,255,255,0.5);
                z-index: 10;
                cursor: pointer;
            }

        /* Pressure color classes */
        .pressure-none {
            background: #1a1a1a;
        }

        .pressure-low {
            background: #2E7D32;
        }

        .pressure-medium {
            background: #FFA726;
        }

        .pressure-high {
            background: #D32F2F;
        }

        .pressure-critical {
            background: #B71C1C;
        }
    </style>
}
@section Scripts {
    <script>
        // Generate realistic heatmap on page load
        document.addEventListener('DOMContentLoaded', function() {
            generateRealisticHeatmap();

            // Animate heatmap every 3 seconds to simulate live data
            setInterval(updateHeatmap, 3000);
        });

        function generateRealisticHeatmap() {
            const grid = document.getElementById('heatmapGrid');
            if (!grid) return;

            grid.innerHTML = ''; // Clear existing cells

            // Create 32x32 grid
            for (let row = 0; row < 32; row++) {
                for (let col = 0; col < 32; col++) {
                    const cell = document.createElement('div');
                    cell.className = 'heatmap-cell';

                    // Generate realistic sitting pressure pattern
                    const pressure = calculatePressure(row, col);
                    cell.classList.add(getPressureClass(pressure));
                    cell.setAttribute('data-row', row);
                    cell.setAttribute('data-col', col);
                    cell.setAttribute('data-pressure', pressure);

                    // Tooltip on hover
                    cell.title = `Position: (${row}, ${col})\nPressure: ${pressure.toFixed(0)} PSI`;

                    grid.appendChild(cell);
                }
            }
        }

        function calculatePressure(row, col) {
            // Simulate realistic sitting pattern (high pressure in buttocks area)
            const centerRow = 20;
            const centerCol = 16;

            // Calculate distance from pressure center
            const distanceFromCenter = Math.sqrt(
                Math.pow(row - centerRow, 2) +
                Math.pow(col - centerCol, 2)
            );

            // High pressure region (buttocks)
            if (row >= 16 && row <= 24 && col >= 12 && col <= 20) {
                const localDist = Math.sqrt(
                    Math.pow(row - 20, 2) +
                    Math.pow(col - 16, 2)
                );
                return Math.max(0, 500 - localDist * 40 + Math.random() * 50);
            }
            // Medium pressure (thighs)
            else if (row >= 10 && row <= 28 && col >= 8 && col <= 24) {
                return 100 + Math.random() * 150;
            }
            // Low/no pressure elsewhere
            else {
                return Math.random() * 30;
            }
        }

        function getPressureClass(pressure) {
            if (pressure < 30) return 'pressure-none';
            if (pressure < 200) return 'pressure-low';
            if (pressure < 400) return 'pressure-medium';
            if (pressure < 550) return 'pressure-high';
            return 'pressure-critical';
        }

        function updateHeatmap() {
            // Slightly animate existing cells to simulate live data
            const cells = document.querySelectorAll('.heatmap-cell');
            cells.forEach(cell => {
                const currentPressure = parseFloat(cell.getAttribute('data-pressure'));
                const variation = (Math.random() - 0.5) * 30; // Random variation
                const newPressure = Math.max(0, currentPressure + variation);

                cell.setAttribute('data-pressure', newPressure);
                cell.className = 'heatmap-cell ' + getPressureClass(newPressure);
                cell.title = `Position: (${cell.dataset.row}, ${cell.dataset.col})\nPressure: ${newPressure.toFixed(0)} PSI`;
            });
        }
    </script>
}