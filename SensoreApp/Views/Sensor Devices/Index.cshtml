@model IEnumerable<SensoreApp.Models.SensorDevices>

@{
    ViewData["Title"] = "Sensor Devices";
}

<div class="container mt-4">

    <!-- Reminder on how to comment-->
    <!--  Header -->
    <div class="d-flex justify-content-between mb-4">
        <h2 class="fw-bold">Registered Sensor Devices</h2>

        <!-- New Device Creation Button  -->
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Device
        </a>
    </div>

    <!-- Devices Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">All Devices</h5>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Device Name</th>
                        <th>Serial No.</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var device in Model)
                    {
                        <tr>
                            <td>@device.SensorDeviceID</td>
                            <td>@device.Model</td>
                            <td>@device.SerialNumber</td>
                            <td>
                                <span class="badge @(device.IsActive ? "bg-success" : "bg-secondary")">
                                    @(device.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>

                            <!-- Action Buttons -->
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@device.SensorDeviceID"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                <a asp-action="Edit" asp-route-id="@device.SensorDeviceID"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@device.SensorDeviceID"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

